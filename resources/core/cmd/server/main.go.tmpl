package main

import (
	"html/template"
	"io"
	"net/http"
	"os"

{{if or (.EnablePostgre) (.EnableSqlite) -}}
	"{{.ProjectName}}/internal/database"
{{- end}}
	"{{.ProjectName}}/internal"
	"{{.ProjectName}}/internal/logger"
	"{{.ProjectName}}/internal/middlewares"
	"{{.ProjectName}}/internal/routes"

	"github.com/joho/godotenv"
)

type TemplateRenderer struct {
	templates *template.Template
}

func (t *TemplateRenderer) Render(
	w io.Writer,
	name string,
	data interface{},
) error {
	return t.templates.ExecuteTemplate(w, name, data)
}

func main() {
	err := godotenv.Load()

	if err == nil {
		logger.MainLogger.Info("Loading .env file")
	}

  {{if or (.EnablePostgre) (.EnableSqlite) -}}
  _ = database.Connect()
  {{- end}}

  container := internal.NewContainer()

	router := routes.MainRouter(container)

	port := os.Getenv("PORT")

	if port == "" {
		port = "3000"
	}

	logger.MainLogger.Infof("üåç WebServer is running at http://127.0.0.1:%s", port)

	middlewares.ViteReload()

	err = http.ListenAndServe(":"+port, router)

	if err != nil {
		logger.MainLogger.Fatalf("Failed to start HTTP server on port %s : %v", port, err)
	}
}
