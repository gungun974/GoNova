version: "2"
run:
  tests: true
linters:
  default: none
  enable:
    - bodyclose
    - errcheck
    - errorlint
    - gocyclo
    - govet
    - ineffassign
    - nakedret
    - revive
    - sqlclosecheck
    - staticcheck
    - unconvert
    - unparam
    - unused
  settings:
    gocyclo:
      min-complexity: 30
    revive:
      rules:
        - name: var-naming
          disabled: true
    staticcheck:
      checks: ["all", "-ST1000", "-ST1003", "-ST1016", "-ST1020", "-ST1021", "-ST1022", "-ST1005", "-ST1012"]
  exclusions:
    generated: lax
    presets:
      - comments
      - common-false-positives
      - legacy
      - std-error-handling
    paths:
      - .*_templ.go$
      - build
      - mocks
      - third_party$
      - builtin$
      - examples$
formatters:
  enable:
    - gofumpt
    - goimports
  exclusions:
    generated: lax
    paths:
      - .*_templ.go$
      - build
      - mocks
      - third_party$
      - builtin$
      - examples$
